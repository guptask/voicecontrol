#!/usr/bin/python

# Ubuntu/Debian script

import pyaudio,os
import speech_recognition as sr
import subprocess

# Use xdotool for mouse and keyboard control

def announce(message):
    espeak_cmd = 'espeak -v mb-us1 -s 170 "' + message + '"'
    os.system(espeak_cmd)

def betty(command, should_announce):
    betty_cmd = '~/.betty/main.rb ' + command
    output = subprocess.check_output(betty_cmd, shell=True)
    if should_announce == True : announce(output)

def openchrome():
    os.system("google-chrome&")


def opendownloads():
    os.system("nautilus $HOME/Downloads/ &")


def opensearch():
    os.system("gnome-do")


def lockscreen():
    os.system("xdotool key super+l")


def goonline(source):
    announce('Okay. Ask a question. I will search it')
    audio = r.listen(source)
    try:
        betty('turn web on', False)
        cmd = r.recognize_google(audio).lower()
        print(cmd)
        betty('turn web off', False)

    except sr.UnknownValueError : return
    except sr.RequestError      : return


def validCommand(source):
    audio = r.listen(source)
    try:
        cmd = r.recognize_google(audio).lower()
        print(cmd)
        if   cmd == "open chrome"    : openchrome()
        elif cmd == "open downloads" : opendownloads()
        elif cmd == "open search"    : opensearch()
        elif cmd == "lock screen"    : lockscreen()
        elif cmd == "go online"      : goonline(source)
        else                         : return False

    except sr.UnknownValueError : return False
    except sr.RequestError      : return False

    announce('Goodbye')
    return True


def activate(source):
    audio = r.listen(source)
    try:
        cmd = r.recognize_google(audio).lower()
        if cmd == "activate" : 
            announce('Hello. What do you want ?')
            while validCommand(source) == False : pass

    except sr.UnknownValueError : return
    except sr.RequestError      : return


if __name__ == "__main__":
    r = sr.Recognizer()
    with sr.Microphone() as source:
        r.adjust_for_ambient_noise(source, duration = 1)
        while 1:
            activate(source)
